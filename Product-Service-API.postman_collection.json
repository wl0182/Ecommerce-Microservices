{
  "info": {
    "name": "Product Service API",
    "description": "Collection for testing Product Service microservice APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:7002/products",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}",
              "host": ["{{baseUrl}}"]
            }
          }
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/1",
              "host": ["{{baseUrl}}"],
              "path": ["1"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Latest iPhone with titanium design and A17 Pro chip\",\n  \"price\": 1199.99,\n  \"sku\": \"IPHONE15PRO-256\",\n  \"categoryId\": 1,\n  \"stockQuantity\": 25\n}"
            },
            "url": {
              "raw": "{{baseUrl}}",
              "host": ["{{baseUrl}}"]
            }
          }
        },
        {
          "name": "Update Product Price",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/1/price?newPrice=1099.99",
              "host": ["{{baseUrl}}"],
              "path": ["1", "price"],
              "query": [
                {
                  "key": "newPrice",
                  "value": "1099.99"
                }
              ]
            }
          }
        }
      ]
    },
